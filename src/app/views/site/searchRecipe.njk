{% extends "site/layout.njk" %}
{% block search %}
        <form action="/search" method="GET" name="filter" class="filter">
                <input type="text" name="filter" value="{{filter}}" placeholder="Buscar" id="">
                <button type="submit" value="">Buscar</button>
            </form>
{% endblock search %}

{% block content %}

     <main>
     <h1 id="search">Buscando por "{{filter}}"</h1>
        <section class="cards">

           {% for food in foods %}
        
                <div class="card " id="{{food.id}}">
                {% for image in images %}
                    <div class="card-image">
                    {% if image.recipe_id == food.id %}
                        <img src="{{image.src}}" alt="{{image.name}}">
                    {% endif %}
                    </div>
                {% endfor %}
                    <div class="card-content">
                        <h1 >{{food.title}}</h1>
                    </div>
                    <div class="card-info">
                        <p >por {{food.author}}</p>
                    </div>
                </div>
                
            {% endfor %}



        </section>



    </main>

{% endblock content %}