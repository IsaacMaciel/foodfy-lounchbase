{% extends "site/layout.njk" %}

{% block content %}
    <main>
        <section class="cards">

           {% for food in foods %}
        
                <div class="card " id="{{food.id}}">
                    {% for image in images %}
                    <div class="card-image">
                        {% if image.recipe_id == food.id %}
                            <img src="{{image.src}}" alt="{{image.name}}">
                        {% endif %}
                    </div>
                    {% endfor %}

                    <div class="card-content">
                        <h1 >{{food.title}}</h1>
                    </div>
                    <div class="card-info">
                        <p >por {{food.author}}</p>
                    </div>
                </div>
                
            {% endfor %}



        </section>



    </main>


<script src="/script.js"></script>

{% endblock content %}