{% extends 'session/layout.njk' %}
{% block content %}
<section class="login container form">
     <div class="logo">
         <a href="/">
            <img src="/images/logo.png" alt="logo" >
        </a>
    </div>
    <form action="/admin/forgot-password" method="POST">
        <div class="header">
            <h3>Esqueceu a Senha?</h3>
        </div>

        <div class="fields">
             <div class="item">
                <div>Email</div>
             <div class="input">
                <input 
                type="email" 
                name="email" 
                value="{{user.email}}"
                {# onblur="Validate.apply(this,'isEmail')" #}
                placeholder="Digite o seu email"
                >
            </div>
            </div>
        </div>

        <div class="options">
        <a href="#"></a>
        <button class="button" type="submit">Recuperar senha</button>
        </div>

    </form>
</section>



{% endblock content %}