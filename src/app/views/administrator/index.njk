
 {% extends "administrator/layout.njk" %}
 {% block content %}
    <div class="titleandbutton">
        <h1>Gerenciar Receitas </h1>
        <a href="/admin/recipe/create">Criar nova Receita</a>
    </div>
    
    <div class="container-receipts">

                    {% for food in foods %}
                        <div class="card " id="{{food.id}}">
                            {% for image in images %}
                                <div class="card-image">
                                {% if image.recipe_id == food.id %}
                                    <img src="{{image.src}}" alt="{{image.name}}">
                                {% endif %}
                                </div>
                            {% endfor %}
                            
                            <div class="card-content">
                                <h1 >{{food.title}}</h1>
                                <p >por {{food.author}}</p>
                                <a href="/admin/recipe/{{food.id}}">Visualizar</a>
                            </div>
                        </div>    

                    {% endfor %}

    </div>

 {% endblock content %}